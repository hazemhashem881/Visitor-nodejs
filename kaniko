apiVersion: batch/v1
kind: Job
metadata:
  name: kaniko-job
  namespace: jenkins
spec:
  template:
    metadata:
      labels:
        app: kaniko
    spec:
      containers:
        - name: kaniko                                                     
          image: gcr.io/kaniko-project/executor:v1.6.0-debug
          imagePullPolicy: Always
          args:
            - "--context=git://github.com/hazemhashem881/Visitor-nodejs.git"
            - "--destination=hazemhashem100/vistor:latest"
            - "--dockerfile=Dockerfile"
          volumeMounts:
            - name: kaniko-secret
              mountPath: /kaniko/.docker
      volumes:
        - name: kaniko-secret
          secret:
            secretName: regcred
            items:
              - key: .dockerconfigjson
                path: config.json
      restartPolicy: Never
